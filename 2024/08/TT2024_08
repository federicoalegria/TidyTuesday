# Assets

# names
df |> 
  slice(0) |> 
  glimpse()

# glimpse & skim
df |>
  glimpse() |>
  skim()

# tokenizer
df |>
  unnest_tokens(output = word, 
                input = variable) |>
  anti_join(stop_words, 
            by = "word") |>
  group_by(word) |>
  summarise(n = n()) |>
  arrange(desc(n))

